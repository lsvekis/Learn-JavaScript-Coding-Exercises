<body>
  <ul id="list">
    <li>List Item 1</li>
    <li>List Item 2</li>
    <li>List Item 3</li>
  </ul>
  <script>
    const list = document.getElementById("list");
    // 1. Select the second list item
    const secondItem = list.children[1];
    console.log("Second list item:", secondItem.textContent);
    // 2. Remove it
    list.removeChild(secondItem);
    // 3. Confirm the final list structure
    console.log("Updated list:", list);
  </script>
</body>
